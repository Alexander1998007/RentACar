@model IEnumerable<RentalDTO>

@{
    ViewData["Title"] = "Список авто";
}

<h2>Список авто</h2>

<p>
    <a asp-action="Search" class="btn btn-primary">Орендувати нове авто</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Car.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartCarRentalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndCarRentalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalInDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullPrice)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Car.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartCarRentalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndCarRentalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalInDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullPrice)
            </td>
            <td class="btn-group">
                <a asp-controller="Cars" asp-action="Details" asp-route-id="@item.CarId" class="btn btn-info">Деталі</a>
            </td>
            <td>
                <a asp-action="Cancel" asp-route-id="@item.Id" class="btn btn-danger">Відмінити</a>
            </td>
        </tr>
        }
    </tbody>
</table>
