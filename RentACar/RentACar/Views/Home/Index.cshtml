@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.jpeg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    The best car rental in your city.
                    <a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="Rent">
                        Rent
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.jpeg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    We have the best cars in the best price.
                    <a class="btn btn-warning" asp-area="" asp-controller="Home" asp-action="About">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.jpeg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Read more about project and used technologies.
                    <a class="btn btn-default" href="https://github.com/kubawajs/CarRentalApp">
                        GitHub
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Welcome to CarAppRental!</h2>
        <p>
            CarRentalApp is a baccalaureate work that aims to reflect everything I have learned during my studies
        </p>
    </div>
    <div class="col-md-6">
        <h2>Hi!</h2>
        <p>
            We are very glad that you visited our site, we hope that you will find the car you need, and we will take care of everything else;)
        </p>
    </div>
</div>